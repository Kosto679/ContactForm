@model IEnumerable<ContactForm.Models.Customer>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create"
       class="btn btn-primary mx-2">Create New <i class="bi bi-plus-circle"></i></a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Surname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HomePhone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MobilePhone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WorkPhone)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Surname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HomePhone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MobilePhone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WorkPhone)
            </td>
            <td>
               <div class="w-75 btn-group" role="group">
                <a asp-action="Edit" asp-route-id="@item.Id"
                class="btn btn-primary mx-2"> <i class="bi bi-pencil-square"></i> Edit</a> 
                <a asp-action="Details" asp-route-id="@item.Id"
                class="btn btn-danger mx-2"> <i class="bi bi-card-text"></i> Details</a> 
                <a asp-action="Delete" asp-route-id="@item.Id"
                class="btn btn-danger mx-2"> <i class="bi bi-trash-fill"></i> Delete</a>
               </div>
            </td>
        </tr>
}
    </tbody>
</table>
